---
import CafeteriasLayout from "@/layouts/Layout.astro"
import Fondo from "@/components/Cafeterias/Fondo.astro";
import Intro from "@/components/Cafeterias/Intro.astro";
import Gallery from "@/components/Cafeterias/Gallery.astro";

import { getI18N } from "@/i18n/index"
import { getLangFromUrl, useTranslations, useTranslatedPath, } from '@/i18n/utils';

const { currentLocale } = Astro
const i18n = getI18N({ currentLocale })
---

<CafeteriasLayout title={i18n.SEO.CAFETERIAS_TITLE} description={i18n.SEO.CAFETERIAS_DESCRIPTION}>
    <Fondo />
    <main>
        <Intro />
        <Gallery />
    </main>
</CafeteriasLayout>