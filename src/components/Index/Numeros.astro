---
import { CountUp } from "@/components/Index/Numeros/CountUp";
---

<section class="w-full h-screen">
    <div class="w-full relative">
        <svg
            class="relative"
            fill="#706957"
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 2600 131.1"
            preserveAspectRatio="none"
        >
            <path class="elementor-shape-fill" d="M0 0L2600 0 2600 69.1 0 0z"
            ></path>
            <path
                class="elementor-shape-fill"
                style="opacity:0.5"
                d="M0 0L2600 0 2600 69.1 0 69.1z"></path>
            <path
                class="elementor-shape-fill"
                style="opacity:0.25"
                d="M2600 0L0 0 0 130.1 2600 69.1z"></path>
        </svg>
    </div>
    <img
        class="imagen h-auto absolute -z-10"
        src="/numeros/background.jpg"
        alt="Fondo de Numeros"
    />

    <h2 class="text-4xl text-white lg:text-6xl text-center text-balance mb-5">
        Nuestra pasión<br />nos hace crecer
    </h2>
    <div class="grid grid-cols-4 lg:grid-cols-4 gap-y-30">
        <div
            class="number text-amber-100 flex flex-col justify-center items-center"
        >
            <span class="text-9xl font-bold tabular-nums tracking-tighter">
                +<CountUp client:visible initial={0} final={46} />
            </span>
            <span class="uppercase text-white opacity-70"
                >Años de Experiencia</span
            >
        </div>
        <div
            class="number text-amber-100 flex flex-col justify-center items-center"
        >
            <span class="text-9xl font-bold tabular-nums tracking-tighter">
                <CountUp client:visible initial={0} final={9} />
            </span>

            <span class="uppercase text-white opacity-70">Ciudades</span>
        </div>
        <div
            class="number text-amber-100 flex flex-col justify-center items-center"
        >
            <span class="text-9xl font-bold tabular-nums tracking-tighter">
                <CountUp client:visible initial={0} final={42} />
            </span>
            <span class="uppercase text-white opacity-70">Cafeterias</span>
        </div>
        <div
            class="number text-amber-100 flex flex-col justify-center items-center"
        >
            <span class="text-9xl font-bold tabular-nums tracking-tighter">
                <CountUp client:visible initial={0} final={12} />
            </span>
            <span class="uppercase text-white opacity-70">Mezclas de café</span>
        </div>
    </div>

    <div class="w-full relative mb-[250px]"></div>
    <hr class="my-6 border-orange-300 sm:mx-auto lg:my-8" />
</section>

<style>
    .number {
        text-shadow: 0 0 10px rgba(193, 159, 95, 0.5);
    }
    .imagen {
        mask-image: linear-gradient(black 80%, transparent);
    }
</style>
