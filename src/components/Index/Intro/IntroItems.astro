---
interface Props {
    class?: string;
    title: string;
    subtitle: string;
    img: string;
}

const {title, subtitle, img} = Astro.props;
---

<article
    class={`
    ${Astro.props.class}
    col-span-2
    md:col-span-1
    `}
>
    <div class="absolute w-full m-auto bg-center z-10  top-[10px]"></div>

    <img class="col-span-1 self-center mx-auto" src={img} alt="icono">
    <div
        class="col-span-2 text-white"
    >
        <h3 class="text-xl font-semibold">
            {title}
        </h3>
        {
            subtitle && (
                <h3 class="text-sm text-justify">
                    {subtitle}
                </h3>
            )
        }
    </div>
</article>