---
import Layout from '@/layouts/Layout.astro';
import Fondo from '@/components/Index/Fondo.astro';
import Bento from '@/components/Index/Bento.astro';
import Intro from '@/components/Index/Intro.astro';
import Numeros from '@/components/Index/Numeros.astro';
import PreFooter from '@/components/Index/PreFooter.astro';
import Footer from '@/components/Footer.astro';

import { getI18N } from "@/i18n/index"
import { getLangFromUrl, useTranslations, useTranslatedPath, } from '@/i18n/utils';

const { currentLocale } = Astro
const i18n = getI18N({ currentLocale })
---

<Layout 
	title={i18n.SEO_TITLE_1}
	description={i18n.SEO_DESCRIPTION}
>
	<Fondo />
	<main>
		<Bento />
		<Intro />
		<Numeros />
		<PreFooter />
	</main>
	<Footer />
</Layout>

